@model Bank_Branches_Mini_Project.Models.BankBranchModel

<h2>Branch Details:</h2>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Branch ID
            </dt>
            <dd class="col-sm-10">
                @Model.Id
            </dd>
            <dt class="col-sm-2">
                Branch Name
            </dt>
            <dd class="col-sm-10">
                @Model.LocationName
            </dd>
            <dt class="col-sm-2">
                Location
            </dt>
            <dd class="col-sm-10">
                <a href="@Model.LocationURL" target="_blank">@Model.LocationURL</a>
            </dd>
            <dt class="col-sm-2">
                Branch Manager
            </dt>
            <dd class="col-sm-10">
                @Model.BranchManager
            </dd>
            <dt class="col-sm-2">
                Number of Employees
            </dt>
            <dd class="col-sm-10">
                @Model.Employees.Count
            </dd>
        </dl>
    </div>
</div>
<a href="@Url.Action("Index", "Bank")" class="btn btn-info">Back to List</a>
<a class="btn btn-primary" href="/Bank/AddEmployee/@Model.Id">Add Employee</a>
